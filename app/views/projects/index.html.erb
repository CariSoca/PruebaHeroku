<div class="container" ng-app="Delfos">
  <h1>Projects</h1>

  <div ng-controller="projectsController">
    <div class="well">
      <h3>Add a new Project</h3>
      <form ng-submit="addProject()">
        <div class="row">
          <div class="col-xs-6">
            <input type="text" ng-model="newProject.name" class="form-control" placeholder="Name" />
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 text-center">
            <br />
            <input type="Submit" value="Add Project" class="btn btn-primary" />
          </div>
        </div>
      </form>
    </div>
 
    <h3>Current Project</h3>
    <hr />
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <tr ng-show="!projects.length">
          <td colspan="4">No projects created.</td>
        </tr>
        <tr ng-repeat="project in projects">
          <td>{{ visitor.name }}</td>
          <td><a class="btn btn-danger" ng-click="deleteProject($index)">Remove</a></td>
        </tr>
      </tbody>
    </table>


  </div>
</div>
