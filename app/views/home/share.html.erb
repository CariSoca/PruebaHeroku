  <!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


  <style>
  .modal-header, h4, .close {
      background-color: #5cb85c;
      color:white !important;
      text-align: center;
      font-size: 30px;
  }
  .modal-footer {
      background-color: #f9f9f9;
  }
  </style>


</head>
<body ng-app="share" ng-controller="shareCtrl">

            
    <!-- Modal -->
    <div class="modal fade" id="login_modal" role="dialog">
      <div class="modal-dialog">
      
        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header" style="padding:35px 50px;">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4><span class="glyphicon glyphicon-lock"></span> Login</h4>
          </div>
          <div class="modal-body" style="padding:40px 50px;">
            <form role="form">
              <div class="form-group">
                <p> Enter your Google acoount below.</p>
                <label for="usrname"><span class="glyphicon glyphicon-user"></span> Email</label>
                <input type="text" class="form-control" id="usrname" placeholder="Enter email">
              </div>
              <div class="form-group">
                <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Password</label>
                <input type="text" class="form-control" id="psw" placeholder="Enter password">
              </div>
                <button type="submit" class="btn btn-success btn-block"><span class="glyphicon glyphicon-off"></span> Login</button>
            </form>
          </div>
        </div>
        
      </div>
    </div>  

    <!-- Fixed navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top" style = "background-color: #262626">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" >
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to controller: 'home' do %>
            <p class="navbar-brand" style = "color:white; height:100%">Delfos</p>
          <% end %>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
             <% if current_user %>
              <div class="dropdown" style="float:right;">
                <button class="dropbtn"><p style="color:white ; padding-top:15px "><span class=" glyphicon glyphicon-user"></span><%= current_user.name %></p></button>
                <div class="dropdown-content">
                  <a href="#">My projects</a>
                  <%= link_to "Sign out", signout_path, id: "sign_out" %>
                </div>
              </div>
            <% else %>
                <li style="color:white ; padding-top:5px" ><%= link_to "Sign in", "/auth/google_oauth2", id: "sign_in" %></li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>


	<!-- FEATURE SECTION -->
<div class="container wb" style=" width:100%; margin-top : 70px">
	<div class="container wb" style=" width:60%;">
    
    
    <!-- show stories section-->
    <h1 style = "text-align: left">Contributors</h1>
    <div class= "table-responsive" style = "text-align: center ;padding-bottom:30px;">
      
      <table class= "table table-hover" style="width: 100%; margin-right:auto; margin-left:auto; border-color: #262626; border-style:solid   ">
        <tr ng-repeat="c in contributors track by $index">
        
        <td style="pading: 25px" contenteditable="true">{{c}}</td>
        </tr>
      
      </table>
    </div>

    <!-- section to add stories-->



		<div class="form" style = "text-align: center ;padding-top:20px;padding-bottom:30px; width:100%; ">

    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#share_modal">Invite Contributors</button>

    <!-- Modal -->

        <div id="share_modal" class="modal fade" role="dialog">
          <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Invite Contributors</h4>
              </div>
              <div class="modal-body">
                <div >
                  <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#home">Link</a></li>
                    <li><a data-toggle="tab" href="#menu1">Email</a></li>
                  </ul>

                  <div class="tab-content" >
                    <div id="home" class="tab-pane fade in active">
                      <h3>Share this link</h3>
                      <p>{{link}}</p>
                    </div>
                    <div id="menu1" class="tab-pane fade">
                      <h3>Email of contributor</h3>

                      <form>
                        <div class="form-group">
                          <input type="email" class="form-control" id="email">
                        </div>
                        <button type="submit" class="btn btn-success">Invite</button>
                      </form>

                    </div>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>

    		</div>
    
    <div class="container" style="text-align:center; width:100% ;padding-bottom:30px">

      <%= link_to controller: 'home' do %>
      <button class="btn btn-info btn-lg" style="position:relative; float : left; margin-top:100px; padding: 20px 60px">Back</button>
      <% end %>
    <!-- start botton-->
      <%= link_to controller: 'estimation_sessions' do %>
			 <button class="btn btn-success btn-lg" style="position:relative; float : right; margin-top:100px; padding: 20px 60px">START</button>
      <% end %>
		</div>
	</div>
</div><!-- container -->


<script>
$(document).ready(function(){
    $("#myBtn2").click(function(){
        $("#myModal2").modal();
    });
});
</script>

</body>
</html>
